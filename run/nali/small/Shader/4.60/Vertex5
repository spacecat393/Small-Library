#version 460 core

in vec4 vertices;

uniform mat4 ModelViewMatrix;
uniform mat4 ProjectionMatrix;

void main()
{
    mat4 m_ModelViewMatrix = ModelViewMatrix;
    m_ModelViewMatrix[0][3] = 0;
    m_ModelViewMatrix[1][3] = 0;
    //m_ModelViewMatrix[3][0] = 0;
    //m_ModelViewMatrix[3][1] = 0;
    gl_Position = ProjectionMatrix * m_ModelViewMatrix * vec4(vertices.xy + vec2(ModelViewMatrix[0][3], ModelViewMatrix[1][3]), 0.0, 1.0);
}
